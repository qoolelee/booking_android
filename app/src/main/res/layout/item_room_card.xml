<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imageRoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_image_placeholder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/infoIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_info_24"
            android:contentDescription="@string/info_icon"
            app:layout_constraintStart_toStartOf="@id/imageRoom"
            app:layout_constraintTop_toTopOf="@id/imageRoom" />

        <TextView
            android:id="@+id/infoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/info_text"
            android:textSize="13sp"
            android:textColor="#e3e3e3"
            android:padding="8dp"
            app:layout_constraintStart_toEndOf="@id/infoIcon"
            app:layout_constraintTop_toTopOf="@id/infoIcon"
            app:layout_constraintBottom_toBottomOf="@id/infoIcon"/>

        <TextView
            android:id="@+id/textRoomType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deluxe Room, 1 King Bed"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageRoom"/>

        <TextView
            android:id="@+id/textPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NT$9,000"
            android:textColor="#FF5722"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textRoomType"/>

        <TextView
            android:id="@+id/textFeatures"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="40㎡・City view・Free WiFi・Sleeps 3"
            android:textSize="13sp"
            android:textColor="#555555"
            android:paddingTop="4dp"
            android:paddingBottom="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textPrice"/>

        <Button
            android:id="@+id/buttonBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/book_now"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2196F3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textFeatures"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
